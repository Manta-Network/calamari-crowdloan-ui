{
  "name": "calamari-crowdloan",
  "version": "0.1.1",
  "private": true,
  "author": "Parity Technologies <admin@parity.io>",
  "license": "Unlicense",
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "CI=true react-app-rewired test --env=jsdom",
    "eject": "react-app-rewired eject",
    "lint": "eslint src/**/*.js",
    "lint:ci": "eslint src/**/*.js --max-warnings=0",
    "lint:fix": "eslint --fix src/**/*.js",
    "predeploy": "react-app-rewired build",
    "deploy": "gh-pages -d build -m '[ci skip] Updates'"
  },
  "dependencies": {
    "@polkadot/api": "^4.16.2",
    "@polkadot/extension-dapp": "^0.38.7",
    "@polkadot/keyring": "^6.10.1",
    "@polkadot/networks": "^6.10.1",
    "@polkadot/types": "^4.16.2",
    "@polkadot/ui-keyring": "^0.82.1",
    "@polkadot/ui-settings": "^0.82.1",
    "@polkadot/util": "^6.10.1",
    "@polkadot/util-crypto": "^6.10.1",
    "axios": "^0.21.1",
    "axios-retry": "^3.1.9",
    "chart.js": "^3.4.1",
    "classnames": "^2.3.1",
    "i18next": "^20.3.3",
    "i18next-browser-languagedetector": "^6.1.2",
    "lint-staged": "^11.0.0",
    "node-sass": "^6.0.1",
    "prettier": "^2.3.2",
    "prop-types": "^15.7.2",
    "query-string": "^6.13.5",
    "react": "^16.14.0",
    "react-chartjs-2": "^3.0.3",
    "react-copy-to-clipboard": "^5.0.3",
    "react-dom": "^16.14.0",
    "react-flags-select": "^2.1.2",
    "react-i18next": "^11.11.3",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^4.0.3",
    "react-toastify": "^7.0.4",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^2.0.3",
    "store": "^2.0.12"
  },
  "homepage": "https://crowdloan.calamari.manta.network",
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "babel-preset-env": "^1.7.0",
    "eslint": "^7.20.0",
    "eslint-config-semistandard": "^15.0.1",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-only-warn": "^1.0.2",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-standard": "^5.0.0",
    "gh-pages": "^3.2.3",
    "react-app-rewired": "^2.1.8",
    "semistandard": "^16.0.0"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "semistandard"
    ],
    "plugins": [
      "only-warn"
    ]
  },
  "engines": {
    "node": ">=12",
    "npm": ">=6"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "keywords": [
    "substrate",
    "substrate-ui",
    "polkadot-js"
  ],
  "jest": {
    "modulePathIgnorePatterns": [
      "<rootDir>/src/__tests__/mock.js"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/src/__tests__/mock.js"
    }
  }
}
